<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sonido"
        android:id="@+id/btnSonido"
        android:onClick="reproducirSonido"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen_uno"
        android:layout_above="@+id/btnSonido"
        android:layout_toLeftOf="@+id/btnSonido"
        android:layout_toStartOf="@+id/btnSonido"
        android:layout_marginBottom="58dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen_dos"
        android:layout_alignBottom="@+id/imagen_uno"
        android:layout_toRightOf="@+id/btnSonido"
        android:layout_toEndOf="@+id/btnSonido" />

</RelativeLayout>