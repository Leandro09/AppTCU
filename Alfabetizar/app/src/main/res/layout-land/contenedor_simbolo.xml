<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textPrimera"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sonido"
        android:id="@+id/btnSonido"
        android:onClick="reproducirSonido"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textSegunda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textSegunda"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textPrimera"
        android:layout_alignStart="@+id/textPrimera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textTercera"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textPrimera"
        android:layout_alignStart="@+id/textPrimera" />

</RelativeLayout>