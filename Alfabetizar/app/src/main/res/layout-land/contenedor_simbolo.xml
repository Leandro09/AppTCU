<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pantalla_simbolo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen1"
        android:src="@drawable/imagen0_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/imagen2"
        android:layout_alignRight="@+id/imagen2"
        android:layout_alignEnd="@+id/imagen2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen2"
        android:src="@drawable/imagen0_1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen3"
        android:src="@drawable/imagen0_1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSonido1"
        android:onClick="reproducirSonido"
        android:background="@drawable/bt_sonido"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imagen1"
        android:layout_toRightOf="@+id/imagen1"
        android:layout_toEndOf="@+id/imagen1"
        android:layout_marginTop="23dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSonido2"
        android:onClick="reproducirSonido"
        android:background="@drawable/bt_sonido"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imagen2"
        android:layout_toEndOf="@+id/imagen2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSonido3"
        android:onClick="reproducirSonido"
        android:background="@drawable/bt_sonido"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/imagen3"
        android:layout_toRightOf="@+id/imagen3"
        android:layout_toEndOf="@+id/imagen3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen4"
        android:src="@drawable/imagen0_4"
        android:layout_alignTop="@+id/imagen2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>